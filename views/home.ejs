    async function encerrarAtendimento(number) {
      const response = await fetch('/end', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ number })
      });

      if (response.ok) {
        alert("Atendimento encerrado!");
      } else {
        alert("Algo deu errado");
      }
    }

